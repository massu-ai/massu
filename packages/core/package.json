{
  "name": "@massu/core",
  "version": "0.1.0",
  "type": "module",
  "description": "AI Engineering Governance MCP Server - Session memory, feature registry, code intelligence, and rule enforcement",
  "license": "BSL-1.1",
  "author": "Massu AI <hello@massu.ai>",
  "main": "dist/server.js",
  "types": "src/server.ts",
  "exports": {
    ".": "./dist/server.js",
    "./cli": "./dist/cli.js"
  },
  "bin": {
    "massu": "./dist/cli.js"
  },
  "scripts": {
    "start": "npx tsx src/server.ts",
    "test": "vitest run",
    "build": "tsc --noEmit && npm run build:server && npm run build:hooks",
    "build:server": "esbuild --bundle --platform=node --format=esm --outdir=dist --entry-names=[name] src/server.ts src/cli.ts --external:better-sqlite3 --external:yaml --external:zod --banner:js='import{createRequire as __cr}from\"module\";const require=__cr(import.meta.url);'",
    "build:hooks": "esbuild --bundle --platform=node --format=esm --outdir=dist/hooks src/hooks/*.ts --external:better-sqlite3 --banner:js='import{createRequire as __cr}from\"module\";const require=__cr(import.meta.url);'",
    "test:integration": "vitest run src/__tests__/integration/",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "yaml": "^2.4.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "esbuild": "^0.27.3",
    "tsx": "^4.0.0",
    "typescript": "^5.4.0",
    "vitest": "^4.0.18"
  },
  "files": [
    "dist/**/*"
  ],
  "keywords": [
    "mcp",
    "claude-code",
    "ai-governance",
    "code-quality",
    "session-memory",
    "feature-registry"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ethankowen-73/massu.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/ethankowen-73/massu/issues"
  },
  "homepage": "https://massu.ai"
}
